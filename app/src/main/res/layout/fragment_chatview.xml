<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/inputView"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/chatView">

        <LinearLayout
                android:id="@+id/chatLayoutView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <TextView
                    android:text="テキストと画像を保存できるメモ帳です。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:id="@+id/textHeaderView"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:minHeight="30dp"
                    android:id="@+id/textView"
                    android:textSize="15sp"
                    android:background="@drawable/chatview_frame_style"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"/>

            <TextView
                    android:text="ああああああああaaaaあこんにちぃはaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaこっここがさいごですよようおよよｙ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:minHeight="30dp"
                    android:id="@+id/textView2"
                    android:textSize="15sp"
                    android:background="@drawable/chatview_frame_style"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"/>

            <ImageView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/sakura"
                    android:layout_gravity="end"
                    android:id="@+id/imageView2"/>

            <ImageView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/space"
                    android:layout_gravity="end"
                    android:id="@+id/imageView3" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/enterButton">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text=""
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/enterButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>